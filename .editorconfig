# EditorConfig is supported by many editors and IDEs
# See https://editorconfig.org for more information

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 2
quote_type = single

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
